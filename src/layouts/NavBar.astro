---
import DropdownList from "../components/DropDownList";
import NavBarItem from "../components/NavBarItem";
import LangugeDropDown from "../components/LangugeDropDown";
import NavMenu from "../components/NavMenu";
const pathname = new URL(Astro.request.url).pathname;
---

<nav
  class="bg-white text-black flex min-h-[72px] justify-between items-center py-3 px-12 sticky top-0 z-10"
>
  <button class="fixed top-0 right-0 lg:hidden">
    <NavMenu client:load>
      <NavBarItem
        client:load
        link="/home"
        text="الرئيسية"
        currentLocation={pathname}
      />
      <DropdownList
        client:load
        options={["1", "2", "3"]}
        link="/"
        currentLocation={pathname}
        defaultText="تبرع الآن"
      />
      <NavBarItem
        client:load
        link="/about"
        text="آخر الأحداث"
        currentLocation={pathname}
      />
      <NavBarItem
        client:load
        link="/telegram"
        text="قنوات تلغرام"
        currentLocation={pathname}
      />
      <NavBarItem
        client:load
        link="/contact-us"
        text="اتصل بنا"
        currentLocation={pathname}
      />
      <div class="flex flex-col sm:hidden items-center gap-4 pb-8">
        <div class="w-36">
          <LangugeDropDown client:load />
        </div>
        <div class="h-[1.5px] w-[90%] bg-mainBlue"></div>
        <div
          class="bg-palestine-green flex px-6 py-3 rounded-md fill-white hover:fill-slate-200 text-white gap-4 items-center hover:cursor-pointer hover:bg-opacity-80 hover:text-opacity-80 transition-all duration-700"
        >
          <svg
            width="21"
            height="18"
            viewBox="0 0 21 18"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
